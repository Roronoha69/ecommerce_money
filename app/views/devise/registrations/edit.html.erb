<%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>

<body style="background-image: linear-gradient(to right top, #d16ba5, #c777b9, #ba83ca, #aa8fd8, #9a9ae1, #8aa7ec, #79b3f4, #69bff8, #52cffe, #41dfff, #46eefa, #5ffbf1);">
<div class="main">
 <div class="card-flow" style="width: 100%; height: 100%;">
<h2>Editer ton profil : <%= current_user.email %></h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

    <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "Nom" %>
  </div>

   <div class="field">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name, autofocus: true, autocomplete: "Prénom" %>
  </div>

   <div class="field">
    <%= f.label :address %><br />
    <%= f.text_field :address, autofocus: true, autocomplete: "Adresse" %>
  </div>

 <!-- <div class="grid-35">
    <label for="fname">Nom</label>
  </div>
  <div class="grid-65">
    <input type="text" id="fname" tabindex="1" />
  </div>

  <div class="grid-35">
    <label for="fname">Prénom</label>
  </div>
  <div class="grid-65">
    <input type="text" id="fname" tabindex="1" />
  </div>

  <div class="grid-35">
    <label for="fname">Adresse</label>
  </div>
  <div class="grid-65">
    <input type="text" id="fname" tabindex="1" />
  </div> -->

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %> <i>(laissez vide si inchanger)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :current_password %><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="actions" style="margin-top: 20px;">
    <%= f.submit "Mettre à jour", class: 'btn btn-outline-success' %>
  </div>
<% end %>

<h3>Supprimer mon compte</h3>

<%= button_to "Supprimer mon compte", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-outline-danger'  %></p>
</div>
</div>

<center>
<div class="margin" style="margin-bottom: 100px;">
<%= link_to "Retour profil", :back, class: 'btn btn-primary' %>
</div>
</center>

